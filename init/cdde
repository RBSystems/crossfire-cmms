#!/bin/bash
#
# cdde        Startup script for the cdde Daemon
#
# chkconfig: - 85 15
# description: Daemon for cdde
# processname: cdde

# Source function library.
. /etc/rc.d/init.d/functions

# Path to binary
daemon=/usr/local/bin/cdde
prog=cdde
RETVAL=0

# subs
getpids() {
        PIDS=`ps -efww | grep $prog | grep xml | awk {'print $2'}`
	PIDS=`echo ${PIDS//\n/''}`
        [ -z "$PIDS" ] && return 1 || return 0
}
start() {
        echo -n $"Starting $prog: "
        $daemon -c /etc/cdde.xml 1>/dev/null 2>&1
        RETVAL=$?
        return $RETVAL
}
stop() {
	echo -n $"Stopping $prog: "
	getpids && [ -w / ] && kill $PIDS
	RETVAL=$?
	return $RETVAL
}
status() {
	if getpids ; then
		echo "$prog ($PIDS) is running..."
	else
		echo "$prog is stopped"
		RETVAL=1
	fi
	echo
}

# See how we were called.
case "$1" in
  start)
	if getpids ; then
		echo "$prog ($PIDS) is allready running..."
	else
		start && success || failure
	fi
	echo
	;;
  stop)
	stop && success || failure
	echo
	;;
  status)
        status
	RETVAL=$?
	;;
  restart)
        stop && success || failure
        echo
        start && success || failure
        echo
        ;;
  condrestart)
        if getpids ; then
                stop && success || failure
                echo
                start && success || failure
                echo
        else
                echo "$prog is stopped"
        fi
	;;
  *)
	echo $"Usage: cmmsd {start|stop|restart|condrestart|status}"
	exit 1
esac

exit $RETVAL
